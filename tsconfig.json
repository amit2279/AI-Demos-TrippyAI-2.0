{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",    
    "moduleResolution": "bundler", // Changed from node16/nodenext
    "allowImportingTsExtensions": true, // Added to handle .ts/.tsx imports    
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",  // Add this line
    "lib": ["DOM", "DOM.Iterable", "ESNext"],  // Add this line
    "resolveJsonModule": true,    
    "isolatedModules": true,  // Add this line
    "noEmit": true  // Add this line for Vite
  },
  "include": ["src/**/*", "server.ts", "config.ts"],
  "exclude": ["node_modules"]
}